# Mini LinkedIn - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ========================
# SUPABASE CONFIGURATION
# ========================
# Get these from your Supabase project dashboard (Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_anon_key_here

# Additional Supabase keys (optional - for advanced features)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# ========================
# DATABASE CONFIGURATION
# ========================
# PostgreSQL connection strings (auto-generated by Supabase)
POSTGRES_URL=postgres://postgres.your-project-ref:password@aws-0-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require
POSTGRES_URL_NON_POOLING=postgres://postgres.your-project-ref:password@aws-0-us-east-1.pooler.supabase.com:5432/postgres?sslmode=require
POSTGRES_PRISMA_URL=postgres://postgres.your-project-ref:password@aws-0-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true
POSTGRES_DATABASE=postgres
POSTGRES_HOST=db.your-project-ref.supabase.co
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_database_password

# ========================
# IMAGE UPLOAD SERVICE
# ========================
# Get your API key from https://api.imgbb.com/
NEXT_PUBLIC_IMGBB_API_KEY=your_imgbb_api_key_here

# ========================
# GOOGLE OAUTH (OPTIONAL)
# ========================
# Get these from Google Cloud Console
GOOGLE_CLIENTID=your-google-client-id.apps.googleusercontent.com
CLIENT_SEC=your-google-client-secret

# ========================
# DEPLOYMENT CONFIGURATION
# ========================
# Your deployed site URL (for production)
NEXT_PUBLIC_SITE_URL=https://your-app-name.vercel.app

# ========================
# VERCEL CONFIGURATION
# ========================
# Auto-generated by Vercel CLI (don't modify manually)
VERCEL_OIDC_TOKEN=auto_generated_by_vercel

# ========================
# DEVELOPMENT SETTINGS
# ========================
# Suppress Node.js warnings in development
NODE_NO_WARNINGS=1

